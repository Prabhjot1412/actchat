<div data-controller='modal' class="modal fade modal-add-backdrop" id="modal" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalLongTitle"><%= title %></h5>
        <button type="button" class="btn btn-danger" data-action="click->modal#toggle_modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= yield %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>