<nav class="navbar navbar-light sticky-top bg-light justify-content-between shadow-sm bg-white rounded">
  <a href="/" class="navbar-brand mx-3 text-primary">
    <i class="fa-solid fa-champagne-glasses"></i>

    ActChat
  </a>

  <div>
    <div data-controller='search' class="input-group rounded" style='width: 25rem'>
      <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" data-action='keyup->search#users'/>

      <span class="input-group-text border-0" id="search-addon">
